<div>

    <% if current_user %>
        <div class="edit-and-destroy">
            <%= link_to "Edit", edit_article_path(@article)%><br>
            <%= link_to "Erase", article_path(@article), data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure you want to delete this article? This action will be irreversible."
                }%>
        </div>

    <% end %>

   
    <br><br><br>
    <h1 class="title-show">    
        <%= @article.title %>
    </h1>
    <div class="post-content">
        <p>
            <%= @article.content %>
        </p>
    </div>

    <p>Posted by <b><%= @article.user.name %><b> <p>

    <div class="icons_footer">
        <%= render 'articles/links_share' %>
    </div>
</div>

